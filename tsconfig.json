{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": ["es2017"],
        "target": "es2019",
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio"
        ]
    }
}